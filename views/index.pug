extends _bootstrap
append styles
	// Bootstrap theme
	link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css")
	// Custom styles for this template
	link(href='/css/theme.css', rel='stylesheet')
block body
	// Fixed navbar
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') TeamChallenge
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li.active
						a(href='/') Home
					li
						a(href='/leaderboard') Leaderboard
					li
						a(href='/profile') Profile
		
	.container.theme-showcase(role='main')
		// Main jumbotron for a primary marketing message or call to action
		.jumbotron
			h1 #{event.name}
			p
				| #{event.description}
			p Activites from #{event.first_date} to #{event.last_date}
			p Activity types: #{activity_types} 

		h3 Join the ride and add your miles to the total 
			|  
			+a-btn-primary("/auth/login#") Sign in with Strava


		h2 Progress so far #{distance * 100 / event.distance_goal} %
		table.table
			tr
				td(style="text-align:left;") 0 km
				td(style="text-align:center;") Today - #{distance} km
				td(style="text-align:right;") #{event.distance_goal} km
				
		+progress-bar-warning(distance * 100 / event.distance_goal)


		.row
			.col-md-6
				h3 Most recent activities
				+table(["#","Name","Activities","Distance"],[["1","Mark Smith","3","285km"],["2","Jacob Thornton","4", "254km"],["3","Larry the Bird","3","221km"]])

			.col-md-6
				h3 Top athletes
				+table(["#","Name","Activities","Distance"],[["1","Mark Smith","3","285km"],["2","Jacob Thornton","4", "254km"],["3","Larry the Bird","3","221km"]])

		+alert-info("<strong>Can't see your activity?</strong> Don't panic - activities are updated daily and may take a while to come through!")
