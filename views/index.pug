extends _bootstrap
append styles
	// Bootstrap theme
	link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css")
	// Custom styles for this template
	link(href='/css/justified-nav.css', rel='stylesheet')
block body
	// Fixed navbar
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') TeamChallenge
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li.active
						a(href='/') Home
					li
						a(href='/leaderboard') Leaderboard
					if user
						li
							a(href='/profile') #{user.displayName} 
					if user
						li
							img(src=user.avatar width="50px")
					else
						li
							a(href='/profile') Login
		
	.container.theme-showcase(role='main')
		.jumbotron
			h1 #{event.name}
			p
				| #{event.description}
			p
				strong Activity date range 
				|	#{event.first_date} to #{event.last_date} - 
				strong Activity types: 
				| #{activity_types} 

			+a-btn-primary("/auth/login#") Sign in with Strava


		h2 Progress so far #{distance * 100 / event.distance_goal} %
		table.table
			tr
				td(style="text-align:left;") 0 km
				td(style="text-align:center;") Today - #{distance} km
				td(style="text-align:right;") #{event.distance_goal} km
				
		+progress-bar-warning(distance * 100 / event.distance_goal)


		.row
			.col-md-6
				h3 Most recent activities
				+table(["Date","Name","Activity","Distance","Type"],activities)

			.col-md-6
				h3 Top athletes
				+table(["Name","Country","Activties","Distance"],athletes)


		include footer.pug
