extends _bootstrap
append styles
	// Bootstrap theme
	link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css")
	// Custom styles for this template
	link(href='/css/theme.css', rel='stylesheet')
block body
	// Fixed navbar
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') #{event.shortname}
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li
						a(href='/') Home
					li.active
						a(href='/leaderboard') Leaderboard
					if user
						li
							a(href='/profile') #{user.displayName} 
					if user
						li
							img(src=user.avatar width="50px")
					else
						li
							a(href='/profile') Login

		
	.container.theme-showcase(role='main')
		h2 Leaderboard overall
		p
			+table(["Name","Country","Activities","Elevation", "Distance"],athletes)

		each row in athletesbystage
			h2 Leaderboard Stage #{row.stage} #{stages[row.stage-1].name} (#{stages[row.stage-1].distance}km)
			p
				+table(["Name","Country","Activities","Elevation","Distance"],row.athletes)


		include footer.pug
