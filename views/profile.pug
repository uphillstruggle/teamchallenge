extends _bootstrap
append styles
	// Bootstrap theme
	link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css")
	// Custom styles for this template
	link(href='/css/theme.css', rel='stylesheet')
block body
	// Fixed navbar
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='#') TeamChallenge
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li
						a(href='/') Home
					li
						a(href='/leaderboard') Leaderboard
					li.active
						a(href='/profile') #{user.displayName}
					li
						img(src=user.avatar width="50px")
						
		
	.container.theme-showcase(role='main')
		h1 My activities
		p Thanks for joining the challenge! These activities have been added to the challenge total:
		p Qualifying activities from #{event.first_date} to #{event.last_date} of types #{activity_types}
		p
			+table(["#","Name","type","Date","Distance"],activities)


		include footer.pug
